<nav class="h-auto navbar bg-danger navbar-quizapp position-sticky">
  <div class="container d-flex align-items-center justify-content-between">
    <div class="d-flex align-items-center">
      <%= link_to welcome_path, class: 'navbar-logo' do %>
        <%= logo_html.html_safe %>
      <% end %>
    </div>

    <% if current_user %>
      <div class="d-flex align-items-center">
        <h5 class="me-3 mb-0">
          <%= link_to t('forms.scoreboard'), scoreboard_steps_path, class: 'text-white m-0 fw-normal' %>
        </h5>
        <h5 class="me-3 mb-0">
          <%= link_to t('forms.edit_profile'), edit_user_path, class: 'text-white m-0 fw-normal' %>
        </h5>
        <h5 class="mb-0">
          <%= link_to t('forms.sign_out'), '#', class: 'text-white m-0 fw-normal', data: { bs_toggle: 'modal', bs_target: '#signoutModal' } %>
        </h5>
        <% if I18n.locale == :en %>
          <%= image_tag('en.png', alt: 'English', class: 'rounded-circle', style: 'width:24px; margin-left:16px; margin-bottom:-2px') %>
        <% elsif I18n.locale == :fr %>
          <%= image_tag('fr.png', alt: 'French', class: 'rounded-circle', style: 'width:24px; margin-left:16px; margin-bottom:-2px') %>
        <% elsif I18n.locale == :il %>
          <%= image_tag('il.png', alt: 'Hebrew', class: 'rounded-circle', style: 'width:24px; margin-left:16px; margin-bottom:-2px') %>
        <% end %>
      
        <%= form_with(model: current_user, url: user_path, local: true, method: :patch, id: 'languageForm') do |form| %>
          <div class="">
            <%= form.select :language, I18n.available_locales.map { |locale| [I18n.t("languages.#{locale}"), locale] }, {}, class: "form-select-nav", id: 'languageSelect' %>
          </div>
        <% end %>

      </div>  
    <% end %>
  </div>
</nav>
